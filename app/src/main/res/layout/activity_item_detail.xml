<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FragmentParent.HomeFragment.ItemDetailActivity">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_boder"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="290dp"
                android:layout_height="190dp"
                android:src="@drawable/giay"
                android:foregroundGravity="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Jordan 1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/bg_boder"
            android:orientation="horizontal"
            android:layout_height="70dp">

            <Button
                android:id="@+id/btnMessageSeller"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:text="Message Seller"
                android:textColor="#111B13"
                android:background="@drawable/transparentbackground" />

            <Button
                android:id="@+id/btnbuy"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_marginStart="40dp"
                android:text="Buy for 30$"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/bg_boder">

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:text="Mo Ta" />

        </LinearLayout>

    </LinearLayout>
</layout>