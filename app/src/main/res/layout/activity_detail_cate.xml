<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/bg_boder"
                android:id="@+id/imageDetail"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:background="@drawable/bg_boder"
                android:id="@+id/imageDetail1"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtTenSp"
                android:layout_width="150dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTenSp1"
                android:hint="type here"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtGia"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtGia1"
                android:hint="type here"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="150dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

            <EditText
                android:hint="type here"
                android:id="@+id/txtDes1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtType"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/bg_boder"
                android:textStyle="bold" />

            <EditText
                android:hint="type here"
                android:id="@+id/txtType1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:entries="@array/your_spinner_items" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtTrangThai"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_boder"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is your item sitll available?"/>

            <CheckBox
                android:id="@+id/txtTrangThai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <Button
            android:id="@+id/Luu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_boder"
            android:text="Save" />



        <Button
            android:id="@+id/xoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_boder"
            android:text="Delete" />

    </LinearLayout>
</layout>