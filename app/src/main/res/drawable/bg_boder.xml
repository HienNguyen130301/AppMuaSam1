<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Set the background color (white in this example) -->
        </shape>
    </item>

    <!-- Thin black border -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the border color (black in this example) -->
        </shape>
    </item>
</layer-list>
